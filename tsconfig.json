{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
  },
  "compileOnSave": true,
  "include": [
    "components",
    "public/icons",
    "public/index.tsx",
    "pages/index.tsx",
    "styles/GlobalStyles.tsx",
    "public/icons/custom.d.ts",
    "pages"
  ],
  "exclude": [
    "node_modules"
  ],
}
